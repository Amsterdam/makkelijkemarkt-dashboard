{% extends "DashboardBundle:master:default.html.twig" %}

{% block title %}Markt beheer - {{ parent() }}{% endblock %}

{% block document %}
    <div class="row">
        <div class="col-xs-12">

            <h1>Markten</h1>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Markt</th>
                            <th>Capaciteit</th>
                            <th width="50">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
{% for markt in markten.results %}
                        <tr>
                            <td>{{ markt.naam }}</td>
                            <td>
                                {{ markt.aantalKramen|default('') }} kramen
                                /
                                {{ markt.aantalMeter|default('-') }} meter
                                /
                                {{ markt.auditMax|default('-') }} steekproef max
                            </td>
                            <td>
                                <a href="{{ path('gemeenteamsterdam_makkelijkemarkt_dashboard_markt_edit', {'id': markt.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                            </td>
                        </tr>
{% else %}
                        <tr>
                            <td colspan="3">Geen gegevens gevonden</td>
                        </tr>
{% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}