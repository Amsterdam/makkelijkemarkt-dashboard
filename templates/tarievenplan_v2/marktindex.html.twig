{% extends "base.html.twig" %}

{% block title %}Tariefplannen - {% endblock %}

{% block css %}
        {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block javascript %}
        {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block document %}
    <h1>Tariefplannen - {{ markt.naam }}</h1>

    <p>
        <a class="btn btn-primary" href="{{ path('app_tarievenplan_create', {'marktId': markt.id, 'type': 'lineair'}) }}">Lineairplan toevoegen</a>
        <a class="btn btn-primary" href="{{ path('app_tarievenplan_create', {'marktId': markt.id, 'type': 'concreet'}) }}">Concreetplan toevoegen</a>
        <a class="btn btn-warning" href="{{ path('app_tarievenplan_simulate', {'marktId': markt.id, 'tarievenPlanType': 'lineair'}) }}">Simuleer Factuur</a>
    </p>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>id</th>
            <th>type</th>
            <th>naam</th>
            <th>vanaf</th>
            <th>tot</th>
            <th>Opties</th>
        </tr>
        </thead>
        <tbody>
        {% for tariefplan in tariefplannen %}
            <tr>
                <td>{{ tariefplan.id }}</td>
                <td>{{ tariefplan.type == 'concreet' ? 'Concreet' : 'Lineair' }}</td>
                <td>{{ tariefplan.name }}</td>
                <td>{{ tariefplan.dateFrom|date('d-m-Y') }}</td>
                <td>{{ tariefplan.dateUntil ? tariefplan.dateUntil|date('d-m-Y') : null }}</td>
                <td>
                    <form method="post" action="{{ path('app_tarievenplan_delete', {'tarievenplanId': tariefplan.id}) }}">
                        <a class="btn btn-primary" href="{{ path('app_tarievenplan_update', {'tarievenplanId': tariefplan.id}) }}">Bewerken</a>
                        <input type="hidden" name="_csrf" value="{{ csrf_token('app_tarievenplan_delete') }}">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Weet u het dat u tariefplan met id {{ tariefplan.id }} wilt verwijderen?')">Verwijderen</a>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}