{% extends "base.html.twig" %}

{% block title %}Tariefsoorten{% endblock %}

{% block css %}
        {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block javascript %}
        {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block document %}
    <div class="d-inline-flex align-items-center justify-content-between w-100">
        <h1>Tariefsoorten</h1>
        <a
            class="nav-link btn btn-sm btn-success h-100"
            href="{{ path('app_tariefsoort_create') }}"
        >
            Nieuwe tariefsoort
        </a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Naam</th>
                <th>Type</th>
                <th>Unit</th>
                <th>Label op factuur</th>
                <th>Gearchiveerd</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
        {% for soort in tariefSoorten %}
            <tr>
                <td>{{ soort.id }}</td>
                <td>{{ soort.label }}</td>
                <td>{{ soort.tariefType }}</td>
                <td>{{ soort.unit }}</td>
                <td>{{ soort.factuurLabel }}</td>
                <td>{{ soort.deleted ? 'Ja' : '' }}</td>
                <td>
                    <a href={{ path('app_tariefsoort_edit', {'id': soort.id  }) }}>
                        <span class="bi bi-pencil-fill"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}