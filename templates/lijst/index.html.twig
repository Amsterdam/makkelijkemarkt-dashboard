{% extends "base.html.twig" %}

{% block css %}
        {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block javascript %}
        {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block title %}Lijsten{% endblock %}

{% block document %}
    <h1>Lijsten</h1>
    <h4><a href="{{ path('app_index_met_dag', {'dag': vorigeMaandag|date('Y-m-d')}) }}" class="btn btn-info">&lt;</a> {{ maandag|date('d-m-Y') }} - {{ zondag|date('d-m-Y') }} <a href="{{ path('app_index_met_dag', {'dag': volgendeMaandag|date('Y-m-d')}) }}" class="btn btn-info">&gt;</a></h4>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Markt</th>
                <th colspan="2">Week</th>
                <th colspan="2">Weekend</th>
                <th>Barcode</th>
            </tr>
        </thead>
        <tbody>
        
        {% for markt in markten %}
            <tr>
                <td>{{ markt.naam }}</td>
                <td><a href="{{ path('app_lijst_weeklijstsollicitantenpdf', {'marktId': markt.id, 'dag': maandag|date('Y-m-d')}) }}" target="_blank" class="btn btn-primary">Sollicitanten</a></td>
                <td><a href="{{ path('app_lijst_weeklijstvasteplaatsenpdf', {'marktId': markt.id, 'dag': maandag|date('Y-m-d')}) }}" target="_blank" class="btn btn-primary">Vaste plaatsen</a></td>
                <td><a href="{{ path('app_lijst_alijstpdf', {'marktId': markt.id, 'dag': maandag|date('Y-m-d')}) }}" target="_blank" class="btn btn-primary">A-lijst</a></td>
                <td><a href="{{ path('app_lijst_blijstpdf', {'marktId': markt.id, 'dag': maandag|date('Y-m-d')}) }}" target="_blank" class="btn btn-primary">B-lijst</a></td>
                <td><a href="{{ path('app_lijst_lijstbarcodepdf', {'marktId': markt.id, 'dag': maandag|date('Y-m-d')}) }}" target="_blank" class="btn btn-primary">Barcode</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
   