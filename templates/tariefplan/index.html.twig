{% extends "base.html.twig" %}

{% block title %}Tariefplannen{% endblock %}

{% block css %}
        {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block javascript %}
        {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block document %}
    <h1>Tariefplannen</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Markt</th>
                <th colspan="2">Opties</th>
            </tr>
        </thead>
        <tbody>
        {% for markt in markten %}
            <tr>
                <td>{{ markt.naam }}</td>
                <td><a href="{{ path('app_tariefplan_marktindex', {'marktId': markt.id}) }}" class="btn btn-primary">Tariefplannen</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}